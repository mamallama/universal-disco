<h1>Listing posts</h1>
 
<table class="table table-bordered">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Date</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.user %></td>
      <td><%= post.date %></td>
    </tr>
  <% end %>
</table>

<%= button_to "New Post", new_post_path, :class => "btn btn-default", :method => :get %>